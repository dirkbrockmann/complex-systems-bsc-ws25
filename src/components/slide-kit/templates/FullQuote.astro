---
import Figure from '../Figure.astro';
import TwoCol from '../TwoCol.astro';
import Quote from '../../Quote.astro';

import type { ImageMetadata } from 'astro';

export interface Props {
  src: ImageMetadata;
  srcDark?: ImageMetadata;
  alt: string;
  quote: string;
  cite:string;
  author?: string;
  fit?: 'contain' | 'cover';     // how the image fills the box
  class?: string;                // extra classes on the outer wrapper
  figureClass?: string;        // extra classes on the Figure wrapper
  quoteClass?: string;           // size/color tweaks for quote
  authorClass?: string;          // size/color tweaks for author
}

const {
  src,
  srcDark,
  alt,
  quote,
  cite,
  author,
  fit = 'cover',
  class: className = '',
  figureClass = '',
  quoteClass = '',
  authorClass = ''
} = Astro.props;
---

<TwoCol ratio="1:1" align="center" class="" leftClass="" rightClass="">

 <div slot="left">
  <div class=`flex flex-col items-center h-full`>
       <Quote author={author} cite={cite} quote={quote}/>
  </div>
</div>
<div slot="right">
  <Figure
    src={src}
    alt={alt}
    boxed=true
    fit="cover"
    class={figureClass}
  />
</div>
</TwoCol>
